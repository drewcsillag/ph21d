{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    // "noUnusedParameters": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "types": ["jest", "node"],
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
